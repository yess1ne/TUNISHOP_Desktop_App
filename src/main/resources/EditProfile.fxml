<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.EditProfileController">
    <padding><Insets top="20" right="30" bottom="20" left="30"/></padding>

    <Label text="Edit Profile" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <TextField fx:id="nomField" promptText="Last Name"
               style="-fx-font-size: 14px;" />
    <TextField fx:id="prenomField" promptText="First Name"
               style="-fx-font-size: 14px;" />
    <TextField fx:id="emailField" promptText="Email"
               style="-fx-font-size: 14px;" />

    <Button text="Update Profile"
            onAction="#handleUpdateProfile"
            style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <Separator style="-fx-padding: 10 0;" />

    <Label text="Change Password" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <PasswordField fx:id="oldPasswordField" promptText="Old Password"
                   style="-fx-font-size: 14px;" />
    <PasswordField fx:id="newPasswordField" promptText="New Password"
                   style="-fx-font-size: 14px;" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                   style="-fx-font-size: 14px;" />

    <Button text="Change Password"
            onAction="#handleChangePassword"
            style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold;" />
</VBox>
