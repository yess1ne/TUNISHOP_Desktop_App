<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AddReclamationController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #F9F7F7;">

    <!-- 🔝 HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #3F72AF;" prefHeight="70">
            <padding><Insets top="10" bottom="10" left="20" right="20"/></padding>
            <children>
                <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                    <image>
                        <Image url="@TuniShop_Logo.jpg"/>
                    </image>
                </ImageView>
                <Label text="TuniShop - Reclamation Portal" style="-fx-text-fill: white;">
                    <font><Font name="Arial Bold" size="24.0"/></font>
                    <effect><DropShadow color="black" radius="2.0"/></effect>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- 📂 SIDEBAR -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #DBE2EF;" prefWidth="200">
            <padding><Insets top="30" left="10" right="10" bottom="20"/></padding>
            <children>
                <Button text="🏠 Home" prefWidth="160" style="-fx-background-radius: 20; -fx-background-color: #3F72AF; -fx-text-fill: white;"/>
                <Button text="➕ Add Reclamation" prefWidth="160" style="-fx-background-radius: 20;"/>
                <Button text="📋 Show Reclamations" prefWidth="160" style="-fx-background-radius: 20;"/>
                <Button text="💰 Add Remboursement"      onAction="#handleGoToAddRemboursement" prefWidth="160" style="-fx-background-radius: 20;"/>
            </children>
        </VBox>
    </left>

    <!-- ✏️ MAIN FORM -->
    <center>
        <VBox spacing="25" alignment="CENTER_LEFT">
            <padding><Insets top="50" left="50" right="50" bottom="30"/></padding>
            <children>

                <Label text="Submit a Reclamation" style="-fx-text-fill: #112D4E;">
                    <font><Font name="Arial Bold" size="20"/></font>
                </Label>

                <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="500">

                    <VBox spacing="6">
                        <Label text="Order ID:" style="-fx-text-fill: #112D4E;">
                            <font><Font name="Arial" size="14"/></font>
                        </Label>
                        <TextField fx:id="commandeIdField"
                                   promptText="Enter Order ID"
                                   style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #3F72AF;"
                                   prefHeight="35"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Product ID:" style="-fx-text-fill: #112D4E;">
                            <font><Font name="Arial" size="14"/></font>
                        </Label>
                        <TextField fx:id="produitIdField"
                                   promptText="Enter Product ID"
                                   style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #3F72AF;"
                                   prefHeight="35"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Reason for the claim:" style="-fx-text-fill: #112D4E;">
                            <font><Font name="Arial" size="14"/></font>
                        </Label>
                        <TextField fx:id="raisonField"
                                   promptText="Enter Reason"
                                   style="-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #3F72AF;"
                                   prefHeight="35"/>
                    </VBox>

                    <HBox spacing="20" alignment="CENTER">
                        <Button text="Add"
                                onAction="#handleAdd"
                                style="-fx-background-color: #112D4E; -fx-background-radius: 20px; -fx-text-fill: white;"
                                prefWidth="130" prefHeight="38"/>
                        <Button text="Show"
                                onAction="#handleShow"
                                style="-fx-background-color: #3F72AF; -fx-background-radius: 20px; -fx-text-fill: white;"
                                prefWidth="130" prefHeight="38"/>
                    </HBox>


                </VBox>
            </children>
        </VBox>
    </center>

    <!-- 📎 FOOTER -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #DBE2EF;" prefHeight="40">
            <children>
                <Label text="© 2025 TuniShop. All rights reserved." style="-fx-text-fill: #3F72AF;">
                    <font><Font name="Arial" size="12"/></font>
                </Label>
            </children>
        </HBox>
    </bottom>

</BorderPane>
